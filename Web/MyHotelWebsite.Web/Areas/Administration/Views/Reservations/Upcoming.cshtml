@using MyHotelWebsite.Web.ViewModels.Administration.Reservations

@model HotelAdministrationAllReservationViewModel

<body>
    <h1 class="text-center">Upcoming Reservations List</h1>
    <div id="page">
        <div class="clearfix"></div>
        <div class="row">
            @if (!Model.Reservations.Any())
            {
                <div class="col-12 text-center">
                    <h2>Nothing found</h2>
                    <br />
                </div>
            }
            else
            {
                <partial name="_SingleReservationHotelManagementPartial" />
                <partial name="_PagingReservations-UpcomingPartial" model="@Model" />
            }
        </div>
    </div>
</body>
