@using MyHotelWebsite.Web.ViewModels.Blogs
@model SingleBlogViewModel

<body>
        <section class="blog-block">
            <div class="container">
                <div class="row offspace-45">
                    <div class="view-set-block">
                        <div class="col-md-5 col-sm-5 col-xs-12">
                            <div class="event-blog-image">
                                <img alt="image" class="img-responsive" src="@("https://localhost:5001/" + @Model.BlogImageUrl)">
                            </div>
                        </div>
                        <div class="col-md-7 col-sm-7 col-xs-12 side-in-image">
                            <div class="event-blog-details">
                            <h4>@Model.Title</h4>
                            <p>@Model.Content</p>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                <a type="button" class="btn btn-small btn-danger" style="margin-left:5px" asp-controller="Blogs" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
                                <a type="button" id="target" class="btn btn-small btn-danger" style="margin-left:7px" asp-controller="Blogs" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are you sure you want to delete this blog?')" class=" btn btn-secondary">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div>
        <partial name="_Notification" />
        </div>
</body>


