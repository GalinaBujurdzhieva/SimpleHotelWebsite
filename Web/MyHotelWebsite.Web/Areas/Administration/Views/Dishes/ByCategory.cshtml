@using MyHotelWebsite.Web.ViewModels.Dishes

@model DishByCategoryViewModel

<!DOCTYPE html>
<html lang="en">
<body>
    <div id="page">
        <div class="clearfix"></div>
        <div class="row">
            @if (!Model.Dishes.Any())
            {
                <div class="col-12 text-center">
                    <h2>Nothing found</h2>
                    <br />
                </div>
                
            }
            <partial name="_SingleDishByCategoryPartial" />
            <br />
            <form method="post" asp-area="Administration" asp-controller="Dishes" asp-action="Search" asp-route-id="@ViewBag.SortingParameter">
                <div class="text-center"><button type="submit" class="btn btn-danger wrn-btn" style="margin-left:10px">Search Again</button></div>
            </form>
            <partial name="_PagingDishesPartial" model="@Model" />
        </div>
    </div>
</body>
</html>
