@using MyHotelWebsite.Web.ViewModels.Dishes

@model DishByCategoryViewModel

<body>
    <div id="page">
        <div class="clearfix"></div>
        <div class="row">
            @if (!Model.Dishes.Any())
            {
                <div class="col-12 text-center">
                    <h2>Nothing found</h2>
                    <br />
                </div>
            }
            else
            {
                <partial name="_SingleDishByCategoryPartial" />
                <br />
                <partial name="_PagingDishesPartial" model="@Model" />
            }
            <form class="mb-2 mt-4" method="post" asp-area="Administration" asp-controller="Dishes" asp-action="Search">
                <div class="text-center"><button type="submit" class="btn btn-danger wrn-btn" >Search Again</button></div>
            </form>
        </div>
    </div>
</body>