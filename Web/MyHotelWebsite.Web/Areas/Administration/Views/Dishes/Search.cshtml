@using MyHotelWebsite.Data.Models.Enums
@using MyHotelWebsite.Web.ViewModels.Administration.Enums;
@using MyHotelWebsite.Web.ViewModels.Dishes

@model SingleDishViewModel
<body>
<div class="container">
    <div class="row pt-1 pb-1">
        <div class="col-lg-12 text-center">
            <h4 class="text-center">Find dish by category</h4>
        </div>
    </div>
</div>
<partial name="_SearchCarouselPartial" />
    <br />
<section class="search-sec">
    <div class="container">
            <form asp-action="ByCategory" method="get" novalidate="novalidate">
            <div class="row">
                <div class="col-lg-12">
                        <div class="row justify-content-center">
                                <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                    <br />
                                <select class="form-control search-slt" asp-items="Html.GetEnumSelectList<DishCategory>()" name="dishCategory">
                                        <option disabled selected>Select Dish Category</option>
                                    </select>
                                </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                <br />
                                <select class="form-control search-slt" asp-items="Html.GetEnumSelectList<DishSorting>()" name="sorting">
                                    <option disabled selected>Select Sorting of the Dishes</option>
                                </select>
                            </div>
                            <div class="col-lg-1 col-md-1 col-sm-12 mt-3">
                                @Html.DropDownListFor(model => model.IsReady
                                , (IEnumerable<SelectListItem>)ViewData["boolYesOrNo"], "Ready", new { style="width:100px; height:37px", onchange = "UpdateReport(this)" })
                            </div>
                            <div class="col-lg-1 col-md-1 col-sm-12 mt-3 ml-3">
                                @Html.DropDownListFor(model => model.IsInStock
                                , (IEnumerable<SelectListItem>)ViewData["boolYesOrNo"], "In stock", new { style="width:100px; height:37px", onchange = "UpdateReport(this)" })
                            </div>
                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                            <br />
                            <input type="submit" value="Search" name="Search" class="btn btn-danger wrn-btn" style="margin-left:10px">
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
</body>

