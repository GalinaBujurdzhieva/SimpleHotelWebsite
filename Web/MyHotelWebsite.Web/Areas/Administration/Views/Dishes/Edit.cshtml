@using MyHotelWebsite.Data.Models.Enums
@using MyHotelWebsite.Web.ViewModels.Administration.Dishes
@model EditDishViewModel

@{
    this.ViewData["Title"] = "Edit the dish";
}
<div class="row">
    <div class="col-10">
    <form method="post" class="col-md-8 offset-md-2"
          enctype="multipart/form-data">
        <div class="text-center mb-3">
            <h1>@this.ViewData["Title"]</h1>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.Id" />
        <div class="text-center mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="text-center mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" rows="5">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="text-center mb-3">
            <label asp-for="DishCategory">Dish Category</label>
            <select class="form-select" asp-for="DishCategory" asp-items="@Html.GetEnumSelectList<DishCategory>()" style="font-size:medium">
            <option disabled selected class="text-danger">Please, select Dish type from the list below:</option>
            </select>
        </div>
        <div class="text-center mb-3">
            <label asp-for="QuantityInStock">Quantity in Stock</label>
            <input asp-for="QuantityInStock" class="form-control" rows="5">
            <span asp-validation-for="QuantityInStock" class="text-danger"></span>
        </div>
        <div class="text-center mb-3">
            <label asp-for="DishImageUrl"></label>
        <input type="file" name="file" asp-for="Image" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="text-center">
            <input type="submit" class="btn btn-danger" />
        </div>
    </form>
    </div>
<div class="col-2 mt-auto mb-auto">
    <img alt="@Model.Name" class="img-responsive" src="@("https://localhost:5001/" + @Model.DishImageUrl)">
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
