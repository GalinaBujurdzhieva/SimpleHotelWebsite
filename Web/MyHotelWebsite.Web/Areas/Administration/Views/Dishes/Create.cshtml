@using MyHotelWebsite.Data.Models.Enums
@using MyHotelWebsite.Web.ViewModels.Administration.Dishes
@model CreateDishViewModel

@{
    this.ViewData["Title"] = "Add new dish";
}

<body>
    <form method="post" class="col-md-6 offset-md-3"
          enctype="multipart/form-data">
        <div class="text-center mb-3">
            <h1>@this.ViewData["Title"]</h1>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="text-center mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="text-center mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" rows="5">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="text-center mb-3">
            <label asp-for="DishCategory">Dish Category</label>
            <select class="form-select" asp-for="DishCategory" asp-items="@Html.GetEnumSelectList<DishCategory>()" style="font-size:medium"></select>
        </div>
        <div class="text-center mb-3">
            <label asp-for="QuantityInStock">Quantity in Stock</label>
            <input asp-for="QuantityInStock" class="form-control" rows="5">
            <span asp-validation-for="QuantityInStock" class="text-danger"></span>
        </div>
        <div class="text-center mb-3">
            <label asp-for="Image"></label>
            <input asp-for="Image" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="text-center">
            <input type="submit" class="btn btn-danger" />
        </div>
    </form>
</body>
