@using MyHotelWebsite.Web.ViewModels.Administration.Orders;

@model HotelAdministrationOrderByOrderStatusViewModel

<body>
    <div id="page">
        <div class="clearfix"></div>
        <div class="row">
            @if (!Model.Orders.Any())
            {
                <div class="col-12 text-center">
                    <h2>Nothing found</h2>
                    <br />
                </div>
            }
            else
            {
                <partial name="_SingleOrderByOrderStatusPartial" />
                <br />
                <partial name="_PagingOrdersByOrderStatusPartial" model="@Model" />
            }
            <form class="mb-2 mt-4" method="post" asp-area="Administration" asp-controller="Orders" asp-action="Search">
                <div class="text-center"><button type="submit" class="btn btn-danger wrn-btn">Search Again</button></div>
            </form>
        </div>
    </div>
</body>
