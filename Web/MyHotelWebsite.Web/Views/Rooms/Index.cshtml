<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="images/icons/favicon.png" />
    <title>vacayhome</title>

    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/fonts/antonio-exotic/stylesheet.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/lightbox.min.css">
    <link href="~/css/responsive.css" rel="stylesheet">
    <script src="~/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/js/lightbox-plus-jquery.min.js" type="text/javascript"></script>
    <script src="~/js/instafeed.min.js" type="text/javascript"></script>
    <script src="~/js/custom.js" type="text/javascript"></script>
</head>
<body>
    <div id="page">
        <section class="image-head-wrapper">
            <div class="inner-wrapper">
                <h1>Rooms</h1>
            </div>
        </section>
        <div class="clearfix"></div>

        <!--gallery block--->
        <section class="gallery-block gallery-front">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                        <div class="gallery-image">
                            <img class="img-responsive" src="~/images/Room-single.png">
                            <div class="overlay">
                                <a class="info pop example-image-link img-responsive" href="~/images/Room-single-big.png" data-lightbox="example-1"><i class="fa fa-search" aria-hidden="true"></i></a>
                                <p>Single room</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                        <div class="gallery-image">
                            <img class="img-responsive" src="~/images/Room-double.png">
                            <div class="overlay">
                                <a class="info pop example-image-link img-responsive" href="~/images/Room-double-big.png" data-lightbox="example-1"><i class="fa fa-search" aria-hidden="true"></i></a>
                                <p>Double room</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                        <div class="gallery-image">
                            <img class="img-responsive" src="~/images/Room-studio.png">
                            <div class="overlay">
                                <a class="info pop example-image-link img-responsive" href="~/images/Room-studio-big.png" data-lightbox="example-1"><i class="fa fa-search" aria-hidden="true"></i></a>
                                <p>Studio</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                        <div class="gallery-image">
                            <img class="img-responsive" src="~/images/Room-apartment.png">
                            <div class="overlay">
                                <a class="info pop example-image-link img-responsive" href="~/images/Room-apartment-big.png" data-lightbox="example-1"><i class="fa fa-search" aria-hidden="true"></i></a>
                                <p>Apartment</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <hr />

        <section>
            <div class="container justify-content-center">
                <div class="h-100 d-flex align-items-center justify-content-center">
                    <form method="post" asp-controller="Reservations" asp-action="Add">
                        <div class="text-center"><button type="submit" class="book-now-btn">Book now</button></div>
                    </form>
                </div>
            </div>
        </section>

        <!--back to top--->
        <a style="display: none;" href="javascript:void(0);" class="scrollTop back-to-top" id="back-to-top">
            <span><i aria-hidden="true" class="fa fa-angle-up fa-lg"></i></span>
            <span>Top</span>
        </a>

    </div>
</body>
</html>
