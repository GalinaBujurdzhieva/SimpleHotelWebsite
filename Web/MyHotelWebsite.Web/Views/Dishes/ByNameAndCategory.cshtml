@using MyHotelWebsite.Web.ViewModels.Dishes

@model DishByNameAndCategoryViewModel

<body>
    <div id="page">
        <div class="clearfix"></div>
        <div class="row">
            @if (!Model.Dishes.Any())
            {
                <div class="col-12 text-center">
                    <h2>Nothing found</h2>
                    <br />
                </div>
            }
            <partial name="_SingleDishByNameAndCategoryPartial" />
            <br />
            <form method="post" asp-controller="Dishes" asp-action="All">
                <div class="text-center"><button type="submit" class="btn btn-danger wrn-btn" style="margin-left:10px">Search Again</button></div>
            </form>
            <partial name="_PagingDishesByNameAndCategoryPartial" model="@Model" />
        </div>
    </div>
</body>