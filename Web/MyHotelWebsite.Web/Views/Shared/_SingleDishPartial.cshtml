@using Microsoft.AspNetCore.Identity
@using MyHotelWebsite.Common
@using MyHotelWebsite.Data.Models
@using MyHotelWebsite.Web.ViewModels.Dishes

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@model DishesAllViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="images/icons/favicon.png" />
    <title>vacayhome</title>

    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/fonts/antonio-exotic/stylesheet.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/lightbox.min.css">
    <link href="~/css/responsive.css" rel="stylesheet">
    <script src="~/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/js/lightbox-plus-jquery.min.js" type="text/javascript"></script>
    <script src="~/js/instafeed.min.js" type="text/javascript"></script>
    <script src="~/js/custom.js" type="text/javascript"></script>
</head>
<body>
@foreach (var dish in Model.Dishes)
    {
            <div class="card" style="width: 18rem; margin:20px">
                <img class="card-img-top rounded" style="margin-top:5px;" src="@("https://localhost:44319/" + @dish.DishImageUrl)" alt="Card image cap">
                <div class="card-body justify-content-center">
                    <h4 class="card-title justify-content-center">@dish.Name</h4>
                    <h5 class="card-text">@dish.DishCategory</h5>
                    <h class="card-text">@dish.Price euro</h>
                    <p class="card-text">@dish.QuantityInStock</p>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        @if (this.SignInManager.IsSignedIn(this.User) && (this.User.IsInRole(GlobalConstants.HotelAdministratorRoleName) || this.User.IsInRole(GlobalConstants.WebsiteAdministratorRoleName)))
                        {
                            <div>
                                <button type="button" class="btn btn-small btn-danger" style="margin-right:10px; width:100px" asp-controller="Dishes" asp-action="Edit" asp-route-id="@dish.Id">Edit</button>
                            </div>
                            <div>
                                <button type="button" class="btn btn-small btn-danger" style="width:100px" asp-controller="Dishes" asp-action="Delete" asp-route-id="@dish.Id" onclick="return confirm('Are you sure you want to delete this dish?')">Delete</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
    }

</body>
</html>
