@using MyHotelWebsite.Common
@using Microsoft.AspNetCore.Identity
@using MyHotelWebsite.Data.Models

@inject SignInManager<ApplicationUser> signInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>
<body>
    <header class="header-container">
        <div class="container">
            <div class="top-row">
                <div class="row">
                    <div class="col-md-2 col-sm-6 col-xs-6">
                        <div id="logo">
                            <p><span>Wel </span> come </p>
                        </div>
                    </div>
                    <div class="col-sm-6 visible-sm">
                        <div class="text-right"><button type="button" class="book-now-btn">Register</button></div>
                    </div>
                    <div class="col-md-8 col-sm-12 col-xs-12 remove-padd">
                        <nav class="navbar navbar-default">
                            <div class="collapse navigation navbar-collapse navbar-ex1-collapse remove-space">
                                <ul class="list-unstyled nav1 cl-effect-10">
                                    <li><a data-hover="Home" asp-controller="Home" asp-action="Index"><span>Home</span></a></li>
                                    <li><a data-hover="About" asp-controller="Home" asp-action="About"><span>About</span></a></li>
                                    <li><a data-hover="Gallery" asp-controller="Home" asp-action="Gallery"><span>Gallery</span></a></li>
                                    <li><a data-hover="Rooms" asp-controller="Rooms" asp-action="Index"><span>Rooms</span></a></li>
                                    <li><a data-hover="Dining" asp-controller="Dishes" asp-action="Index"><span>Dining</span></a></li>
                                    <li><a data-hover="Blog" asp-controller="Blogs" asp-action="Index"><span>Blog</span></a></li>
                                    <li><a data-hover="Contact Us" asp-controller="Home" asp-action="Contacts"><span>contact Us</span></a></li>
                                </ul>

                            </div>
                        </nav>
                    </div>
                    @if (signInManager.IsSignedIn(User))
                    {
                        <div class="btn-toolbar justify-content-center" role="toolbar" aria-label="Toolbar with button groups" style="margin-bottom:5px">
                            <div class="btn-group mr-2" role="group" aria-label="First group">
                                <form method="post" asp-controller="Reservations" asp-action="Book">
                                    <div class="text-center"><button type="submit" class="book-now-btn">Book a room</button></div>
                                </form>
                            </div>
                            <div class="btn-group mr-2" role="group" aria-label="First group">
                                <form method="post" asp-controller="Reservations" asp-action="Mine">
                                    <div class="text-center"><button type="submit" class="book-now-btn">My Reservations</button></div>
                                </form>
                            </div>
                        </div>
                        
                        <div class="btn-toolbar justify-content-center" role="toolbar" aria-label="Toolbar with button groups">
                            <div class="btn-group mr-2" role="group" aria-label="First group">
                                <form method="post" asp-controller="Orders" asp-action="Create">
                                    <div class="text-center"><button type="submit" class="book-now-btn">Order a dish</button></div>
                                </form>
                            </div>
                            <div class="btn-group mr-2" role="group" aria-label="First group">
                                <form method="post" asp-controller="Orders" asp-action="Mine">
                                    <div class="text-center"><button type="submit" class="book-now-btn">My Food Orders</button></div>
                                </form>
                            </div>

                            <div class="btn-group mr-2" role="group" aria-label="First group">
                                <form method="post" asp-controller="User" asp-action="Logout">
                                    <div class="text-center"><button type="submit" class="book-now-btn">Logout</button></div>
                                </form>
                            </div>
                        </div>

                    }
                    else
                    {
                        <div class="col-md-12 contact-form text-center">
                            <h3>Want to make a reservation? <span>Please, register or just log into your account</span></h3>
                        </div>
                        <div class="btn-toolbar justify-content-center" role="toolbar" aria-label="Toolbar with button groups">
                            <div class="btn-group mr-2" role="group" aria-label="First group">
                                <form method="post" asp-controller="User" asp-action="Register">
                                    <div class="text-center"><button type="submit" class="book-now-btn">Register</button></div>
                                </form>
                            </div>
                            <div class="btn-group mr-2" role="group" aria-label="Second group">
                                <form method="post" asp-controller="User" asp-action="Login">
                                    <div class="text-center"><button type="submit" class="book-now-btn">Log in</button></div>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

    <footer>
            <div class="btn-toolbar justify-content-center">
                <div class="btn-group mr-1">
                    <div class="contact-form">
                    <h3><span>Administration Area</span></h3>
                    </div>
                    <form method="post" asp-controller="User" asp-action="Login">
                        <div class="text-center"><button type="submit" class="book-now-btn">Log in</button></div>
                    </form>
                </div>
            </div>
            <div class="copyright">
                <!--Do not remove Backlink from footer of the template. To remove it you can purchase the Backlink !-->
                &copy; 2017 All right reserved. Designed by <a href="http://www.themevault.net/" target="_blank">ThemeVault.</a>
            </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
