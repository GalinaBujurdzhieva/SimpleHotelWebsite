@using Microsoft.AspNetCore.Identity
@using MyHotelWebsite.Data.Models

@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.min.css" asp-append-version="true" />
    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="~/fonts/antonio-exotic/stylesheet.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/lightbox.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #ff4157;">
            <div class="container-fluid">
                <span class="navbar-brand" style="margin-right:30px">Hello, @User.Identity.Name</span>
                <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Administration" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Blogs
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink" style="background-color: #ff4157;">
                                <li><a class="dropdown-item" asp-area="Administration" asp-controller="Blogs" asp-action="All">All Blogs</a></li>
                                <li><a class="dropdown-item" asp-area="Administration" asp-controller="Blogs" asp-action="Create">Create New Blog</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Dishes
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink" style="background-color: #ff4157;">
                                <li><a class="dropdown-item" asp-area="Administration" asp-controller="Dishes" asp-action="All">All Dishes</a></li>
                                <li><a class="dropdown-item" asp-area="Administration" asp-controller="Dishes" asp-action="Search">Search</a></li>
                                <li><a class="dropdown-item" asp-area="Administration" asp-controller="Dishes" asp-action="Create">Add New Dish</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Orders
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink" style="background-color: #ff4157;">
                                <li><a class="dropdown-item" asp-area="Administration" asp-controller="Orders" asp-action="All">All Orders</a></li>
                                <li><a class="dropdown-item" asp-area="Administration" asp-controller="Orders" asp-action="Create">Create New Order</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Rooms
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink" style="background-color: #ff4157;">
                                <li><a class="dropdown-item" asp-area="Administration" asp-controller="Rooms" asp-action="All">All Rooms</a></li>
                                <li><a class="dropdown-item" asp-area="Administration" asp-controller="Rooms" asp-action="Search">Search</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Reservations
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink" style="background-color: #ff4157;">
                                <li><a class="dropdown-item" asp-area="Administration" asp-controller="Reservations" asp-action="All">All Reservations</a></li>
                                <li><a class="dropdown-item" asp-area="Administration" asp-controller="Reservations" asp-action="Create">Add New Reservation</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Guests
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink" style="background-color: #ff4157;">
                                <li><a class="dropdown-item" asp-area="Administration" asp-controller="Guests" asp-action="All">All Guests List</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Staff
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink" style="background-color: #ff4157;">
                                <li><a class="dropdown-item" asp-area="Administration" asp-controller="Staff" asp-action="All">All Employees</a></li>
                                <li><a class="dropdown-item" asp-area="Administration" asp-controller="Staff" asp-action="Register">Register New Employee</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="container justify-content-end">
                <a class="navbar-brand mr-auto" asp-area="" asp-controller="User" asp-action="Logout">Log out</a>
            </div>
        </nav>
    </header>

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

    <script src="~/js/jquery.min.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/bootstrap.min.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/lightbox-plus-jquery.min.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/instafeed.min.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/custom.js" type="text/javascript" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/4w9tyoqrxz1f1590jdh854mx5kjts9pr6aqq1l6gahhoufze/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
</body>
@RenderSection("Scripts", required: false)
</html>