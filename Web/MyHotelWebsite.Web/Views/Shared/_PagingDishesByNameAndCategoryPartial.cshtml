@using MyHotelWebsite.Web.ViewModels.Pagination
@model PagingDishesByNameAndCategoryViewModel

<section>
    <div class="d-flex justify-content-center">
        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item @if (!Model.HasPreviousPage) { 
<text>disabled</text> 
}">
                    <a class="page-link" asp-action="ByNameAndCategory" asp-route-id="@Model.PreviousPageNumber" asp-route-dishCategory="@Model.DishCategory" asp-route-name="@Model.Name">&laquo;</a>
                </li>
                @for (int i = Model.PageNumber - 2; i < Model.PageNumber; i++)
                {
                    if (i > 0)
                    {
                        <li class="page-item"><a class="page-link" asp-action="ByNameAndCategory" asp-route-id="@i" asp-route-dishCategory="@Model.DishCategory" asp-route-name="@Model.Name">@i</a> </li>
                    }
                }
                <li class="page-item active" aria-current="page">
                    <span class="page-link">
                        @Model.PageNumber
                        <span class="sr-only">(current)</span>
                    </span>
                </li>
                @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 2; i++)
                {
                    if (i <= Model.TotalPagesCount)
                    {
                        <li class="page-item"><a class="page-link" asp-action="ByNameAndCategory" asp-route-id="@i" asp-route-dishCategory="@Model.DishCategory" asp-route-name="@Model.Name">@i</a></li>
                    }
                }
                <li class="page-item @if (!Model.HasNextPage) {
<text>disabled</text> 
}">
                    <a class="page-link" asp-action="ByNameAndCategory" asp-route-id="@Model.NextPageNumber" asp-route-dishCategory="@Model.DishCategory" asp-route-name="@Model.Name">&raquo;</a>
                </li>
            </ul>
        </nav>
    </div>
</section>
